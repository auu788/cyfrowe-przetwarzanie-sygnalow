<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainAppController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="520.0" prefWidth="850.0">
         <children>
            <ListView fx:id="signalList" layoutX="14.0" layoutY="14.0" prefHeight="280.0" prefWidth="165.0" style="-fx-focus-color: transparent; -fx-faint-focus-color: transparent;" />
            <Button layoutX="14.0" layoutY="304.0" mnemonicParsing="false" onAction="#createSignal" prefHeight="25.0" prefWidth="165.0" style="-fx-font-weight: bold;" text="Utwórz sygnał">
               <font>
                  <Font name="Lato Bold" size="12.0" />
               </font>
            </Button>
            <Pane layoutX="14.0" layoutY="401.0" prefHeight="101.0" prefWidth="165.0" style="-fx-border-color: grey;">
               <children>
                  <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#loadFromFile" prefHeight="25.0" prefWidth="139.0" text="Wczytaj z pliku" />
                  <Button layoutX="13.0" layoutY="62.0" mnemonicParsing="false" onAction="#saveToFile" prefHeight="25.0" prefWidth="139.0" text="Zapisz do pliku" />
               </children>
            </Pane>
            <Pane layoutX="193.0" layoutY="14.0" prefHeight="488.0" prefWidth="640.0" style="-fx-border-color: grey;">
               <children>
                  <Label fx:id="noSignalLbl" layoutX="114.0" layoutY="204.0" text="Brak sygnału" textFill="#ffffffb4">
                     <font>
                        <Font size="54.0" />
                     </font>
                  </Label>
                  <LineChart fx:id="lineChart" layoutX="24.0" layoutY="14.0" prefHeight="94.0" prefWidth="596.0">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </LineChart>
                  <BarChart fx:id="barChart" layoutX="24.0" layoutY="164.0" prefHeight="150.0" prefWidth="568.0">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis side="LEFT" />
                    </yAxis>
                  </BarChart>
                  <Slider fx:id="bucketsNumSlider" blockIncrement="3.0" layoutX="613.0" layoutY="159.0" max="30.0" min="3.0" orientation="VERTICAL" prefHeight="122.0" prefWidth="14.0" />
                  <Label fx:id="bucketsNumLbl" layoutX="606.0" layoutY="297.0" />
               </children>
            </Pane>
         </children></Pane>
   </children>
</GridPane>
